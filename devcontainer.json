{
    "name": "Python 3.8 Development Container",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "runArgs": ["--name", "python3"],
    "settings": {
        "terminal.integrated.shell.linux": "/bin/bash"
    },
    "extensions": [
        "ms-python.python",
        "vivaxy.vscode-conventional-commits"
    ],
    "forwardPorts": [8888],
    "postCreateCommand": "pip install --upgrade pip",
    "remoteUser": "root"
}
